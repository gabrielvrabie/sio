{% extends "base.html.twig" %}
{% block body %}
    <h1>Home</h1>
    <p> Welcome to the home page!</p>
    <div class="container-fluid">
        <div class="row col-md-12 align-content-end">
            Working time by day
        </div>
        <div class="row">
            <div class="col-md-4">
                <h2>day</h2>
            </div>
            <div class="col-md-4">
                <h2>value</h2>
            </div>
        </div>
        {% for day, workTimeByDay in workTimeByDays %}
            <div class="row">
                <div class="col-md-4">
                    <p>{{ day }}</p>
                </div>
                <div class="col-md-4">
                    <p>{{ workTimeByDay }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="container-fluid">
        <div class="row col-md-12 align-content-end">
            Working time by month
        </div>
        <div class="row">
            <div class="col-md-4">
                <h2>day</h2>
            </div>
            <div class="col-md-4">
                <h2>value</h2>
            </div>
        </div>
        {% for month, workTimeByMonth in workTimeByMonths %}
            <div class="row">
                <div class="col-md-4">
                    <p>{{ month }}</p>
                </div>
                <div class="col-md-4">
                    <p>{{ workTimeByMonth }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
